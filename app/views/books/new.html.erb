<!-- app/views/books/new.html.erb -->
<div class="max-w-2xl mx-auto mt-10 p-6 bg-white shadow-md rounded-lg">
  <h1 class="text-3xl font-bold mb-6 text-center">Create a New Book</h1>

  <%= form_with(model: @book, local: true, class: "space-y-6") do |form| %>

    <% if @book.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative">
        <strong class="font-bold">Oops!</strong>
        <span class="block sm:inline">There were some problems with your input:</span>
        <ul class="mt-2">
          <% @book.errors.full_messages.each do |message| %>
            <li class="text-red-600"><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :title, class: "block text-lg font-medium text-gray-700" %>
      <%= form.text_field :title, class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-primary-500 focus:border-primary-500 sm:text-sm", placeholder: "Enter book title" %>
    </div>

    <div>
      <%= form.label :year, class: "block text-lg font-medium text-gray-700" %>
      <%= form.number_field :year, class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-primary-500 focus:border-primary-500 sm:text-sm", placeholder: "Enter year of publication" %>
    </div>

    <div class="flex justify-end">
      <%= form.submit "Create Book", class: "bg-primary-600 hover:bg-primary-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
    </div>
  
  <% end %>
</div>